<% layout("/layouts/boilerplate") %>

    <body>
        <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
        <div class="row mt-4">
            <div class="col-6 offset-3">
                <form action="/signup" method="POST" novalidate class="needs-validation">
                    <div class="mb-3"><label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" placeholder="Enter username"
                            class="form-control" required>
                        <div class="valid-feedback">
                            Username Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please add valid Username!
                        </div>
                    </div>
                    <div class="mb-3"><label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" placeholder="Enter email" class="form-control"
                            required>
                        <div class="valid-feedback">
                            email Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please add valid email!
                        </div>
                    </div>
                    <div class="mb-3"><label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" placeholder="Enter password"
                            class="form-control" required>
                        <div class="valid-feedback">
                            password Looks good!
                        </div>
                        <div class="invalid-feedback">
                            password add valid email!
                        </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </body>